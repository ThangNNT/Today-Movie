<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.example.todaymovie.util.TMDbExtKt"/>
        <variable
            name="movie"
            type="com.example.todaymovie.domain.model.Movie" />

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>
    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{clickListener}"
        app:cardCornerRadius="6dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="120dp"
            android:layout_height="184dp">
            <ImageView
                android:id="@+id/iv_poster_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="fitXY"
                loadImage="@{TMDbExtKt.getPosterPath(movie.posterPath)}"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                tools:ignore="ContentDescription" />
            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/ratingBar_movie"
                android:theme="@style/RatingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="4dp"
                android:stepSize="0.1"
                android:numStars="5"
                android:isIndicator="true"
                ratingAverage="@{movie.voteAverage}"
                app:layout_constraintTop_toBottomOf="@+id/iv_poster_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginHorizontal="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/ratingBar_movie"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@{movie.title}"
                android:textColor="@color/text_normal_color_primary_opposite"
                android:textSize="@dimen/text_normal_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
