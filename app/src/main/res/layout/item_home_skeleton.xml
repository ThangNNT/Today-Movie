<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/home_skeleton_banner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/skeleton_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="8:4"/>

    <TextView
        android:id="@+id/home_skeleton_popular"
        android:layout_marginTop="@dimen/margin_standard_double"
        app:layout_constraintTop_toBottomOf="@+id/home_skeleton_banner"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="100dp"
        android:background="@drawable/skeleton_background"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/home_skeleton_popular_item_1"
        android:layout_marginTop="@dimen/margin_standard"
        android:background="@drawable/skeleton_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_skeleton_popular"
        android:layout_width="130dp"
        android:layout_height="184dp"/>

    <FrameLayout
        android:id="@+id/home_skeleton_popular_item_2"
        android:layout_marginTop="@dimen/margin_standard"
        android:background="@drawable/skeleton_background"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/home_skeleton_popular_item_1"
        app:layout_constraintTop_toBottomOf="@id/home_skeleton_popular"
        android:layout_width="130dp"
        android:layout_height="184dp"/>

    <FrameLayout
        android:id="@+id/home_skeleton_popular_item_3"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/margin_standard"
        android:background="@drawable/skeleton_background"
        app:layout_constraintStart_toEndOf="@+id/home_skeleton_popular_item_2"
        app:layout_constraintTop_toBottomOf="@id/home_skeleton_popular"
        android:layout_width="130dp"
        android:layout_height="184dp"/>

    <TextView
        android:id="@+id/home_skeleton_nowPlaying"
        android:layout_marginTop="@dimen/margin_standard_double"
        app:layout_constraintTop_toBottomOf="@+id/home_skeleton_popular_item_1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="100dp"
        android:background="@drawable/skeleton_background"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/home_skeleton_nowPlaying_item_1"
        android:layout_marginTop="@dimen/margin_standard"
        android:background="@drawable/skeleton_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_skeleton_nowPlaying"
        android:layout_width="130dp"
        android:layout_height="184dp"/>

    <FrameLayout
        android:id="@+id/home_skeleton_nowPlaying_item_2"
        android:layout_marginTop="@dimen/margin_standard"
        android:background="@drawable/skeleton_background"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/home_skeleton_nowPlaying_item_1"
        app:layout_constraintTop_toBottomOf="@id/home_skeleton_nowPlaying"
        android:layout_width="130dp"
        android:layout_height="184dp"/>

    <FrameLayout
        android:id="@+id/home_skeleton_nowPlaying_item_3"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/margin_standard"
        android:background="@drawable/skeleton_background"
        app:layout_constraintStart_toEndOf="@+id/home_skeleton_nowPlaying_item_2"
        app:layout_constraintTop_toBottomOf="@id/home_skeleton_nowPlaying"
        android:layout_width="130dp"
        android:layout_height="184dp"/>

    <TextView
        android:id="@+id/home_skeleton_topRated"
        android:layout_marginTop="@dimen/margin_standard_double"
        app:layout_constraintTop_toBottomOf="@+id/home_skeleton_nowPlaying_item_1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="100dp"
        android:background="@drawable/skeleton_background"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/home_skeleton_topRated_item_1"
        android:layout_marginTop="@dimen/margin_standard"
        android:background="@drawable/skeleton_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_skeleton_topRated"
        android:layout_width="130dp"
        android:layout_height="184dp"/>

    <FrameLayout
        android:id="@+id/home_skeleton_topRated_item_2"
        android:layout_marginTop="@dimen/margin_standard"
        android:background="@drawable/skeleton_background"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/home_skeleton_nowPlaying_item_1"
        app:layout_constraintTop_toBottomOf="@id/home_skeleton_topRated"
        android:layout_width="130dp"
        android:layout_height="184dp"/>

    <FrameLayout
        android:id="@+id/home_skeleton_topRated_item_3"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/margin_standard"
        android:background="@drawable/skeleton_background"
        app:layout_constraintStart_toEndOf="@+id/home_skeleton_nowPlaying_item_2"
        app:layout_constraintTop_toBottomOf="@id/home_skeleton_topRated"
        android:layout_width="130dp"
        android:layout_height="184dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>